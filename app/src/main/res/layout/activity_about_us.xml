<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity"
    android:gravity="center_horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000">
        <View
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:background="@drawable/oval_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"/>
        <View
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_corners_purple_bg"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/defaultWhite"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo_icon"
                android:layout_marginTop="80dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/surprise_me"
                android:layout_marginTop="30dp"
                android:textSize="35sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surprise Me is a service for creating and\npassing tours around the world.\nSurprise your friends and relatives with\nmemorable adventures!"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:textSize="16sp"/>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>